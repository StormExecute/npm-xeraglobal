{

  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitUseStrict": true,
    "removeComments": true
  },

  "include": [
    "src/**/*",
    "bin/**/*"
  ]

}